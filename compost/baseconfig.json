{
	"base_dir" : ".",
    "src_dir" : "source",
    "out_dir" : "serve",
    "build_dir" : "build",
    "base_url" : "localhost",

    "plugins" : {
        "data" : {
            "csv" : {
                "shapes" : {
                    "table" : "compost.datasources.csvsources.TableCSVDataSource",
                    "dict" : "compost.datasources.csvsources.DictCSVDataSource"
                },
                "default" : "table"
            }
        },
        "renderer" : {
            "html" : {
                "file_suffixes" : ["htm", "html"],
                "inline_tag" : "html",
                "class" : "compost.renderers.html.HTMLRenderer"
            },
            "md" : {
                "file_suffixes" : ["md"],
                "inline_tag" : "md",
                "class" : "compost.renderers.md.MarkdownRenderer",
                "settings" : {
                    "extensions" : [
                        "markdown.extensions.tables",
                        "markdown.extensions.fenced_code"
                    ]
                }
            },
            "md-inline" : {
                "file_suffixes" : [],
                "inline_tag" : "mdin",
                "class" : "compost.renderers.md.MarkdownInlineRenderer",
                "settings" : {
                    "extensions" : [
                        "markdown.extensions.tables",
                        "markdown.extensions.fenced_code"
                    ]
                }
            }
        }
    },
    "utils" : {
        "url_for" : {
            "include_base_url" : false,
            "include_file_suffix" : false
        }
    }
}